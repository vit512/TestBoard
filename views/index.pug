    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')  
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js")

  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
      div.container-fluid
        a.navbar-brand(href='/') #{title}
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarColor01', aria-controls='navbarColor01', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon

      div#navbarColor01.collapse.navbar-collapse(style={"word-break" : "nowrap"})
        ul.navbar-nav.me-auto
          li.nav-item
            a.nav-link.active(href='/') HOME
            span.visually-hidden (current)
          li.nav-item
            a.nav-link(href='/board/page') Boardlist 게시판이동
          li.nav-item
            a.nav-link(href='/mysql') DB test
          li.nav-item
            a.nav-link(href='#') About
          li.nav-item.dropdown
            a.nav-link.dropdown-toggle(data-bs-toggle='dropdown', href='#', role='button', aria-haspopup='true', aria-expanded='false') Dropdown
          div.dropdown-menu
            a.dropdown-item(href='#') Action
            a.dropdown-item(href='#') Another action
            a.dropdown-item(href='#') Something else here
            div.dropdown-divider
            a.dropdown-item(href='#') Separated link
      form.d-flex
        input.form-control.me-sm-2(type='text', placeholder='Search', width=200)
        button.btn.btn-secondary.my-2.my-sm-0(type='submit') Search

    div.d-grid.gap-2
      button.btn.btn-lg.btn-primary(type='button', onclick="location.href='/board/page'" ) 게시판 리스트 이동

